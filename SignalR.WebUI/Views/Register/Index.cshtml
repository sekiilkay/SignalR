@model RegisterDto
@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <title>Restoran Giriş</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #f5f7fa, #c3cfe2);
            margin: 0;
            padding: 0;
        }

        .page-content {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
        }

        .form-v6-content {
            display: flex;
            flex-direction: row;
            background-color: #ffffff;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            border-radius: 15px;
            overflow: hidden;
            max-width: 900px;
            width: 100%;
        }

        .form-left {
            flex: 1;
            background-color: #fafafa;
        }

            .form-left img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .form-detail {
            flex: 1;
            padding: 40px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

            .form-detail h2 {
                font-size: 28px;
                font-weight: 600;
                margin-bottom: 30px;
                color: #333;
            }

        .form-row {
            margin-bottom: 20px;
        }

        .input-text {
            width: 100%;
            padding: 12px 15px;
            border: 1px solid #ccc;
            border-radius: 8px;
            font-size: 16px;
            transition: border-color 0.3s ease;
            box-sizing: border-box;
        }

            .input-text:focus {
                border-color: #ff6f61;
                outline: none;
            }

        .btn {
            width: 100%;
            padding: 12px;
            background-color: #ff6f61;
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .btn:hover {
                background-color: #e45c50;
            }

        .register-link {
            margin-top: 20px;
            text-align: center;
            font-size: 14px;
            color: #666;
        }

            .register-link a {
                color: #ff6f61;
                font-weight: 600;
                text-decoration: none;
                margin-left: 5px;
                transition: color 0.3s ease;
            }

                .register-link a:hover {
                    color: #e45c50;
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="page-content">
        <div class="form-v6-content">
            <div class="form-left">
                <img src="~/feane-1.0.0/images/image.png" alt="form">
            </div>
            <form class="form-detail" method="post">
                <h2>Kayıt Ol</h2>
                <div class="form-row">
                    <input type="text" asp-for="Name" class="input-text" placeholder="Adınız" required>
                </div>
                <div class="form-row">
                    <input type="text" asp-for="Surname" class="input-text" placeholder="Soyadınız" required>
                </div>
                <div class="form-row">
                    <input type="email" asp-for="Mail" class="input-text" placeholder="Email Adresiniz" required>
                </div>
                <div class="form-row">
                    <input type="text" asp-for="UserName" class="input-text" placeholder="Kullanıcı Adınız" required>
                </div>
                <div class="form-row">
                    <input type="password" asp-for="Password" class="input-text" placeholder="Şifreniz" required>
                </div>
                <div class="form-row">
                    <button class="btn" type="submit">Kayıt Ol</button>
                </div>
                <div class="register-link">
                    Zaten hesabınız var mı?
                    <a href="~/Login/Index">Giriş Yapın</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>